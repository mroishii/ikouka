<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AnketoListActivity">

    <include layout="@layout/main_actionbar" android:id="@+id/anketo_list_actionbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/anketo_listview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_grey_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anketo_list_actionbar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/anketo_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/icon_compose"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/anketo_listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/anketo_listview"
        app:layout_constraintTop_toTopOf="@+id/anketo_listview"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>