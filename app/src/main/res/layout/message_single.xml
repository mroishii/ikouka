<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatMessageAvatar"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/chatMessageSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chatMessageContent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="-8dp"
        android:layout_toEndOf="@+id/chatMessageAvatar"
        android:text="sender" />

    <TextView
        android:id="@+id/chatMessageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chatMessageAvatar"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/chatMessageAvatar"
        android:background="@drawable/single_message_background"
        android:padding="8dp"
        android:text="message content"
        android:textColor="#ffffff" />

</RelativeLayout>